
@using WorldMotherSchool.Areas.momsch.Models
@model EditUserModel
<div class="main-content">

    <nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
        <div class="container-fluid">
            <a class="h4 mb-0 text-white text-uppercase d-none d-lg-inline-block" href="./index.html">Ana Səhifə</a>
            <ul class="navbar-nav align-items-center d-none d-md-flex">
                <li class="nav-item dropdown">
                    <a class="nav-link pr-0" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <div class="media align-items-center">
                            <span class="avatar avatar-sm rounded-circle">
                                <img alt="Image placeholder" src="./assets/img/theme/user-icon.png">
                            </span>
                            <div class="media-body ml-2 d-none d-lg-block">
                                @if (Context.Session.GetObjectFromJson<SessionUserModel>("User") != null)
                                {
                                    var data = Context.Session.GetObjectFromJson<SessionUserModel>("User");
                                    <span class="mb-0 text-sm  font-weight-bold">@data.FirstName  @data.SecondName</span>
                                }
                                else
                                {
                                    <span class="mb-0 text-sm  font-weight-bold">Sabina Əliyeva</span>
                                }
                            </div>
                        </div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-arrow dropdown-menu-right">
                        <div class=" dropdown-header noti-title">
                            <h6 class="text-overflow m-0">Xoş gəlmisiz</h6>
                        </div>
                        <div class="dropdown-divider"></div>
                        <a asp-controller="Account" asp-action="LogOut" class="dropdown-item">
                            <i class="ni ni-user-run"></i>
                            <span>Logout</span>
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
        <div class="container-fluid">
            <div class="header-body">
                <!-- Card stats -->
            </div>
        </div>
    </div>
    <div class="container-fluid mt--7">
        <div class="row">
            <div class="col-xl-12 mb-12 mb-xl-0">
                <div class="card bg-gradient-default shadow">
                    <div class="card-header bg-transparent">
                        <div class="row align-items-center">
                            <div class="col">
                                <h2 class="text-white mb-0">Qeydiyyat</h2>
                            </div>
                        </div>
                    </div>
                    <div class="card-body row">
                        <div class="container mt--8 pb-5">
                            <!-- Table -->
                            <div class="row justify-content-center">
                                <div class="col-lg-6 col-md-8">
                                    <div class="card bg-secondary shadow border-0">
                                        <div class="card-body px-lg-5 py-lg-5">
                                            <div class="text-center text-muted mb-4">
                                                <small>Or sign up with credentials</small>
                                            </div>
                                            <form role="form" method="post" enctype="multipart/form-data">
                                                <div asp-validation-summary="ModelOnly"></div>
                                                <div class="form-group">
                                                    <div class="input-group input-group-alternative mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
                                                        </div>
                                                        <input class="form-control" asp-for="FirstName" name="FirstName" placeholder="Ad" type="text">
                                                    </div>
                                                    <span asp-validation-for="FirstName" style="color:red;"></span>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-group input-group-alternative mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
                                                        </div>
                                                        <input class="form-control" asp-for="SecondName" name="SecondName" placeholder="Soyad" type="text">
                                                    </div>
                                                    <span asp-validation-for="SecondName" style="color:red;"></span>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-group input-group-alternative mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
                                                        </div>
                                                        <input class="form-control" asp-for="UserName" name="UserName" placeholder="Leqeb" type="text">
                                                    </div>
                                                    <span asp-validation-for="UserName" style="color:red;"></span>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-group input-group-alternative mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
                                                        </div>
                                                        <input class="form-control" asp-for="Email" name="Email" placeholder="Email" type="text">
                                                    </div>
                                                    <span asp-validation-for="Email" style="color:red;"></span>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-group input-group-alternative">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                                                        </div>
                                                        <input class="form-control" asp-for="Password" name="Password" placeholder="Parol" type="password">
                                                    </div>
                                                    <span asp-validation-for="Password" style="color:red;"></span>
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-group input-group-alternative">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                                                        </div>
                                                        <input class="form-control" asp-for="ComparePassword" name="ComparePassword" placeholder="KohnePassword" type="password">
                                                    </div>
                                                    <span asp-validation-for="ComparePassword" style="color:red;"></span>
                                                </div>
                                                <div class="file-field">
                                                    <a class="btn-floating purple-gradient mt-0 float-left">
                                                        <i class="fas fa-cloud-upload-alt" aria-hidden="true"></i>
                                                        <input type="file" asp-for="Photo" name="Photo" id="fileimage" multiple>
                                                    </a>
                                                    <div class="file-path-wrapper">
                                                        <input class="file-path validate" type="text" id="filetext" placeholder="Photo yüklə">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <img src="" id="img" style="width:72%;" />
                                                </div>
                                                <div class="row my-4">
                                                    <div class="col-12">
                                                    </div>
                                                </div>
                                                <div class="text-center">
                                                    <button type="submit" class="btn btn-primary mt-4">Create account</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer">
            <div class="row align-items-center justify-content-xl-between">
                <div class="col-xl-6">
                    <div class="copyright text-center text-xl-left text-muted">
                        &copy; 2019 <a href="#" class="font-weight-bold ml-1" target="_blank">Dunya Ana Merkezi</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>
















