@using Microsoft.AspNetCore.Localization
@using WorldMotherSchool.Language
@{
    var request = Context.Features.Get<IRequestCultureFeature>();
    var langValue = request.RequestCulture.UICulture.Name;
    var culture = SupportedLanguage.GetUILanguage(langValue);
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Fira+Sans&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="~/img/ana mektebi logo yeni (1).png" type="image/x-icon" />
    <link href="~/assets/js/plugins/nucleo/css/nucleo.css" rel="stylesheet" />
    <link href="~/assets/js/plugins/fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/assets/css/panel.css" rel="stylesheet">
    <link href="~/assets/css/basic.min.css" rel="stylesheet" />
    <link href="~/assets/css/dropzone.min.css" rel="stylesheet" />
    <link href="~/assets/css/argon-dashboard.css?v=1.1.0" rel="stylesheet" />
    <link href="~/assets/css/sample.css" rel="stylesheet" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link href="https://cdn.quilljs.com/1.3.6/quill.bubble.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-vertical fixed-left navbar-expand-md navbar-light bg-white" id="sidenav-main">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand pt-0" asp-controller="Account" asp-action="Index">
                <h2>Dünya Ana Məktəbi</h2>
                <div class="form-group" style="width: 25%;margin: auto;">
                    @*@if (Context.Session.GetObjectFromJson<SessionUserModel>("User") != null)
                    {
                        var data = Context.Session.GetObjectFromJson<SessionUserModel>("User");
                        <img alt="Image placeholder" src="~/img/@data.Photo" style="width: 100%;">
                    }
                    else
                    {
                        <img alt="Image placeholder" src="~/assets/img/theme/user-icon.png" style="width: 100%;">
                    }*@
                </div>
            </a>
            <!-- User -->
            <ul class="nav align-items-center d-md-none">
                <li class="nav-item dropdown">
                    <a class="nav-link" asp-controller="Account" asp-action="Index"  role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <div class="media align-items-center">
                            <span class="avatar avatar-sm rounded-circle">
                                @if (Context.Session.GetObjectFromJson<SessionUserModel>("User") != null)
                                {
                                    var data = Context.Session.GetObjectFromJson<SessionUserModel>("User");
                                    <img alt="Image placeholder" src="~/img/@data.Photo">
                                }
                                else
                                {
                                    <img alt="Image placeholder" src="~/assets/img/theme/user-icon.png">
                                }
                            </span>
                        </div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-arrow dropdown-menu-right">
                        <div class=" dropdown-header noti-title">
                            <h6 class="text-overflow m-0">Xoş gəlmisiz</h6>
                        </div>
                        <div class="dropdown-divider"></div>
                        <a asp-controller="Account" asp-action="LogOut" class="dropdown-item">
                            <i class="ni ni-user-run"></i>
                            <span>Logout</span>
                        </a>
                    </div>
                </li>
            </ul>
            <!-- Collapse Modul-->
            <div class="collapse navbar-collapse" id="sidenav-collapse-main">
                <!-- Collapse header -->
                <div class="navbar-collapse-header d-md-none">
                    <div class="row">
                        <div class="col-6 collapse-brand">
                            <a asp-controller="Account" asp-action="Index">
                                <div class="form-group">
                                    <img src="~/assets/img/theme/Dunya_School_Logowhite-1024x903.png" class="navbar-brand-img" alt="...">
                                </div>
                            </a>
                        </div>
                        <div class="col-6 collapse-close">
                            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle sidenav">
                                <span></span>
                                <span></span>
                            </button>
                        </div>
                    </div>
                </div>
                <!--Left Navigation-->
                <ul class="navbar-nav">
                    <li class="nav-item  class=" active="">
                        <a class=" nav-link active" asp-controller="Account" asp-action="Index">
                            <i class="ni ni-tv-2 text-primary"></i>Ana səhifə
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Panel" asp-action="AddViewInformation">
                            <i class="ni ni-planet text-blue"></i>Əlavə və Redakte etmək
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Panel" asp-action="SlideImage">
                            <i class="ni ni-planet text-blue"></i>Slide Ana Səhifə
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-controller="Panel" asp-action="EventsAbout">
                            <i class="ni ni-planet text-blue"></i>Hadisə Əlavə et
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-controller="Panel" asp-action="EventList">
                            <i class="ni ni-planet text-blue"></i>Hadisə Redakte et
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-controller="Panel" asp-action="AddPhoto">
                            <i class="ni ni-planet text-blue"></i>Foto əlavə etmək
                        </a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="ListRoleUser">
                                <i class="ni ni-planet text-blue"></i>Bütün Şəxslər
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Register" asp-controller="Account">
                            <i class="ni ni-circle-08 text-pink"></i> Qeydiyyat
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()

    <script src="~/js/jquery-1.12.4.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/assets/js/dropzone.min.js"></script>
    <script src="~/assets/js/dropzone-amd-module.min.js"></script>
    <script src="~/assets/js/plugins/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/plugins/chart.js/dist/Chart.min.js"></script>
    <script src="~/assets/js/plugins/chart.js/dist/Chart.extension.js"></script>
    <script src="~/assets/js/argon-dashboard.min.js?v=1.1.0"></script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <script src="~/assets/js/ajax_custom.js"></script>
    <script src="~/assets/js/plugin_customer.js"></script>
