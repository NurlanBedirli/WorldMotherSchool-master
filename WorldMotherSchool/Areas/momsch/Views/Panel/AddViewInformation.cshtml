
@using WorldMotherSchool.Models
@model MainContentModel
<div class="main-content">
    <!-- Navbar -->
    <nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
        <div class="container-fluid">
            <a class="h4 mb-0 text-white text-uppercase d-none d-lg-inline-block" asp-controller="Account" asp-action="İndex">Dünya Ana Məktəbi</a>
            <ul class="navbar-nav align-items-center d-none d-md-flex">
                <li class="nav-item dropdown">
                    <a class="nav-link pr-0" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <div class="media align-items-center">
                            <div class="media-body ml-2 d-none d-lg-block">
                                @if (Context.Session.GetObjectFromJson<SessionUserModel>("User") != null)
                                {
                                    var data = Context.Session.GetObjectFromJson<SessionUserModel>("User");
                                    <span class="mb-0 text-sm  font-weight-bold">@data.FirstName  @data.SecondName</span>
                                }
                                else
                                {
                                    <span class="mb-0 text-sm  font-weight-bold">Sabina Əliyeva</span>
                                }
                            </div>
                        </div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-arrow dropdown-menu-right">
                        <div class=" dropdown-header noti-title">
                            <h6 class="text-overflow m-0">Xoş Gəlmisiz!</h6>
                        </div>

                        <div class="dropdown-divider"></div>
                        <a asp-controller="Account" asp-action="LogOut" class="dropdown-item">
                            <i class="ni ni-user-run"></i>
                            <span>Logout</span>
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
        <div class="container-fluid">
            <div class="header-body">
                <!-- Card stats -->
            </div>
        </div>
    </div>
    <div class="container-fluid mt--7">
        <div class="row">
            <div class="col-xl-12 mb-12 mb-xl-0">
                <div class="card bg-gradient-default shadow">
                    <div class="card-header bg-transparent">
                        <div class="row align-items-center">
                            <div class="col">
                                <h2 class="text-white mb-0">Əlavə və Redakte bölməsi</h2>
                            </div>
                        </div>
                    </div>
                    <div class="card-body row">
                        
                        <form class="md-form col-md-12" method="post" asp-controller="Panel" asp-action="AddViewInformation">
                            <div asp-validation-summary="ModelOnly" style="color: aliceblue;"></div>
                            <div class="row">
                                <div class="form-group col-md-1" style="padding:0px !important; margin-left: 16px;">
                                    <select style="box-shadow: 0px 0px 8px white;border-radius: 25px;" id="inputState" asp-for="Culture"
                                            class="mdb-select md-form colorful-select dropdown-primary form-control">
                                        <option>az</option>
                                        <option>en</option>
                                        <option>ru</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-2" style="padding:0px !important; margin-left:16px;">
                                    <select style="box-shadow: 0px 0px 8px white;border-radius: 25px;" id="resources" asp-for="ViewName"
                                            class="mdb-select md-form colorful-select dropdown-primary form-control"></select>
                                    <span id="ViewName" asp-validation-for="ViewName"></span>
                                </div>
                                <div class="form-group col-md-2">
                                    <a id="Edit" class="btn btn-success" style="color: whitesmoke;">Edit</a>
                                </div>
                            </div>
                            <div id="toolbar"></div>
                            <input name="Text" asp-for="Text" type="text" hidden>
                            <div class="form-group" style="background:white;">
                                <div class="form-group textarea" id="editor" name="Text" style="background:white; height:250px">
                                </div>
                            </div>
                            <div class="form-group purpose-add">
                                <button type="submit" class="btn btn-success">Əlavə Et</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <footer class="footer">
            <div class="row align-items-center justify-content-xl-between">
                <div class="col-xl-6">
                    <div class="copyright text-center text-xl-left text-muted">
                        &copy; 2019 <a href="#" class="font-weight-bold ml-1" target="_blank">Dunya Ana Merkezi</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>

