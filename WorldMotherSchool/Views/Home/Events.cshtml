@using WorldMotherSchool.Models
@model List<EventsAboutModel>

<section class="about-child-event">
    <div class="container">
        <div class="row" id="crss">
            <div class="head-event col-md-12">
                @foreach (var elm in Model)
                {
                    <h1>@elm.EventAboutLanguages.First().TextHead</h1>
                }
            </div>
            <div class="event-watch col-md-12">
                <p><i class="fa fa-calendar" aria-hidden="true"></i>@Model.First().DateTime.ToString("dd/MM/yyyy")</p>
            </div>
            <div class="col-md-12 event-img owl-carousel">
                @foreach (var item in Model)
                {
                    @if (item.EventAboutPhotos.Count != 0)
                    {
                        @foreach (var pht in item.EventAboutPhotos)
                        {
                            <figure class="col-md-12">
                                <img src="~/img/@pht.Photo" id="myImg" alt="img">
                            </figure>
                        }
                    }
                    else
                    {
                        <figure class="col-md-12">
                            <img src="~/img/psix3.jpg" id="myImg" alt="img">
                        </figure>
                    }
                }
            </div>
            <div class="events col-sm-12 col-md-12">
                @foreach (var elm in Model)
                {
                    if (elm.Link == null)
                    {
                        <p>@elm.EventAboutLanguages.First().TextLang</p>
                    }
                    else
                    {
                        <p>@elm.EventAboutLanguages.First().TextLang<a style="color: red;border-bottom: 1px solid;margin-left: 20px;" href="@elm.Link">@elm.EventAboutLanguages.First().TextHead</a></p>
                    }
                }
            </div>
        </div>
    </div>
    <div id="myModal" class="modal">
        <a class="prev" onclick="PlusIndex(-1)"><i class="fa fa-chevron-left pr" aria-hidden="true" id="prev"></i></a>
        <span class="close">&times;</span>
        <div id="modal-img">
            @foreach (var item in Model)
            {
                @if (item.EventAboutPhotos.Count != 0)
                {
                    @foreach (var pht in item.EventAboutPhotos)
                    {
                        <img class="modal-content figure" src="~/img/@pht.Photo" id="img02">
                    }
                }
                else
                {
                    <img class="modal-content figure" src="~/img/psix3.jpg" id="img02">
                }
            }

        </div>
        <a class="next" onclick="PlusIndex(+1)"><i class="fa fa-chevron-right" aria-hidden="true"></i></a>
    </div>
</section>
@section Scripts{
    <script src="~/js/carusel.js"></script>
    <script src="~/js/modal.js"></script>
}
